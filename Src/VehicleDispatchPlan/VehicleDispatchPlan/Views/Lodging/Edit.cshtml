@model VehicleDispatchPlan.Models.M_LodgingFacility
@using VehicleDispatchPlan.Constants;

@{
    ViewBag.Title = "編集";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm("Edit", "Lodging", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>宿泊施設情報</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @{
            Html.EnableClientValidation(false);
        }

        @* 保存ボタン *@
        <div class="form-group">
            <input type="submit" name="cmd" value="@AppConstant.CMD_UPDATE" class="btn btn-default" style="margin-left:10px;" />
        </div>

        @* エラーメッセージ *@
        <div style="color: Red">@ViewBag.ErrorMessage</div>

        <hr />

        @* 宿泊施設コード *@
        <div class="form-group">
            @Html.LabelFor(model => model.LodgingCd, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.LodgingCd)
                @Html.HiddenFor(model => model.LodgingCd)
            </div>
        </div>

        @* 宿泊施設名 *@
        <div class="form-group">
            @Html.LabelFor(model => model.LodgingName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LodgingName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        @* 電話番号 *@
        <div class="form-group">
            @Html.LabelFor(model => model.TelNo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TelNo, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        @* 郵便番号 *@
        <div class="form-group">
            @Html.LabelFor(model => model.PostalNo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PostalNo, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        @* 住所 *@
        <div class="form-group">
            @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

    </div>
}

<div>
    @Html.ActionLink("一覧", "List")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
